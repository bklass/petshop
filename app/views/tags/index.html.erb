<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.nome %></td>
        <td><%= link_to 'Mostrar', tag %></td>
        <td><%= link_to 'Editar', edit_tag_path(tag) %></td>
        <td><%= link_to 'Deletar', tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Tag', new_tag_path %>
